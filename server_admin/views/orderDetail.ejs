<!DOCTYPE>
<html>
<head>
    <meta charset="UTF-8">
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/paginationjs/2.1.4/pagination.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/paginationjs/2.1.4/pagination.css"/>
    <script src="https://use.fontawesome.com/releases/v5.2.0/js/all.js"></script>

    <style> table tr th {
            width: 100px;
        } </style>
</head>
<body>
<div class="container">
    <div id="content">
        <div style="margin: 3% auto; font-size: 20px; text-align: center;">주문상세</div>
        <table class="table table-hover" id="order_detail_table">
            <tr>
                <th>번호</th>
                <td id="order_id"><%= orderId %></td>
            </tr>
        </table>
        <!--        <button style="margin: 5% 40%;" type="button" class="btn btn-primary" onclick="redirectPage()">수정하기</button>-->
        <button style="margin: 5% 40%;" type="button" class="btn btn-primary">수정하기</button>
    </div>
</div>
<script>
    (function ($) {
        $(async function () {
            $(".btn, .btn-primary").click(function () {
                redirectPage();
            });
            // Server에 요청할 데이터의 번호를 가져옵니다.
            const orderId = $('#order_id').text();
            const order = await getOrderFromServer(orderId);

            // table에 값을 채워넣습니다.
            const tableDataNames = ['id', 'merchant_uid', '이름', '핸드폰', '결제상태', '성별', '연령대', '가격대']
            const orderValues = Object.values(order);
            $.each(tableDataNames, function (index, name) {
                const tmpRow = `<tr><th>${name}</th><td>${orderValues[index]}</td></tr>`;
                $('#order_detail_table').append(tmpRow);
            })
            function redirectPage() {
                window.location.href = `<%= process.env.HOST_DOMAIN %>/order/edit?order_id=${orderId}`
            }
        });

        async function getOrderFromServer(orderId) {
            try {
                const ret = await axios.get(`/order/${orderId}`,
                {
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                return ret.data;
            } catch (err) {
                console.log("상품 데이터 조회 오류:", err);
                return undefined;
            }
        }
    })(jQuery);
</script>
</body>
</html>