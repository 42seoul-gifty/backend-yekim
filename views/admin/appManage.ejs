<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
            crossorigin="anonymous"></script>
    <link href="/stylesheets/fSelect.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="/javascripts/fSelect.js"></script>
    <style>

    </style>
</head>
<body class="container">
<div class="row">
    <div class="col-3">
        <%- include ('nav') %>
    </div>
    <div class="col-9" style="margin-top: 30px;">
        <div>옵션 설정</div>
        <table id="select" class="table" style="margin-top: 10px;">
            <tr>
                <th>성별</th>
                <th>나이</th>
                <th>금액대</th>
            </tr>
            <tr>
                <td>
                    <ul class="list-group">
                        <% data.gender.forEach((el)=>{ %>
                            <li class="list-group-item">
                                <% if(el.active == 1){ %>
                                    <input class="form-check-input me-1" name="성별" type="checkbox" value=""
                                           aria-label="..." checked>
                                <% } else{ %>
                                    <input class="form-check-input me-1" name="성별" type="checkbox" value=""
                                           aria-label="...">
                                <% } %>
                                <%= el.option_name %>
                            </li>
                        <% }) %>
                    </ul>
                </td>
                <td>
                    <ul class="list-group">
                        <% data.age.forEach((el)=>{ %>
                            <li class="list-group-item">
                                <% if(el.active == 1){ %>
                                    <input class="form-check-input me-1" name="연령대" type="checkbox" value=""
                                           aria-label="..." checked>
                                <% } else{ %>
                                    <input class="form-check-input me-1" name="연령대" type="checkbox" value=""
                                           aria-label="...">
                                <% } %>
                                <%= el.option_name %>
                            </li>
                        <% }) %>
                    </ul>
                </td>
                <td>
                    <ul class="list-group">
                        <% data.price.forEach((el)=>{ %>
                            <li class="list-group-item">
                                <% if(el.active == 1){ %>
                                    <input class="form-check-input me-1" name="금액대" type="checkbox" value=""
                                           aria-label="..." checked>
                                <% } else{ %>
                                    <input class="form-check-input me-1" name="금액대" type="checkbox" value=""
                                           aria-label="...">
                                <% } %>
                                <%= el.option_name %>
                            </li>
                        <% }) %>
                    </ul>
                </td>
            </tr>

        </table>
        <div style="text-align: center;">
            <button class="btn btn-primary" onclick="saveOption()">저장</button>
        </div>
    </div>
</div>

</div>


</body>
<script>
    (function () {
        // if(sessionStorage.getItem('login')!=='true'){
        //     alert("로그인이 필요한 서비스입니다.")
        //     location.href="https://gifty4u.com/admin"
        // }
    })()

    function saveOption() {
        let submitOption = []
        $('#select input').each(function (index, item) {
            submitOption.push({
                type: $(this).attr("name"),
                value: $(this).parent().text().trim(),
                active: $(this).is(":checked")
            })
        });
        console.log(submitOption)
        fetch("https://gifty4u.com/admin/app", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify({
                option: submitOption
            }),
        }).then((response) => response.json())
            .then((res) => {
                if (res.result === 'success') {
                    alert("성공적으로 저장했습니다.");
                    location.reload();
                } else {
                    alert("unexpected Error")
                }
            }).catch((err) => {
            console.log(err.error)
        })
    }
</script>
</html>
