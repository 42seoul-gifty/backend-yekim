<body class="container">
<div class="row">
    <div class="col-3">
        <%- include ('nav') %>
    </div>
    <div class="col-9" style="margin-top: 30px;">
        <div>옵션 설정</div>
        <table id="select" class="table" style="margin-top: 10px;">
            <tr>
                <th>성별</th>
                <th>나이</th>
                <th>금액대</th>
            </tr>
            <tr>
                <td>
                    <ul class="list-group">
                        <% data.gender.forEach((el)=>{ %>
                            <li class="list-group-item">
                                <% if (el.active == true) { %>
                                    <input class="form-check-input me-1" name="성별" type="checkbox" value=""
                                           aria-label="..." checked>
                                <% } else { %>
                                    <input class="form-check-input me-1" name="성별" type="checkbox" value=""
                                           aria-label="...">
                                <% } %>
                                <%= el.type %>
                            </li>
                        <% }) %>
                    </ul>
                </td>
                <td>
                    <ul class="list-group">
                        <% data.age.forEach((el)=>{ %>
                            <li class="list-group-item">
                                <% if(el.active == true){ %>
                                    <input class="form-check-input me-1" name="연령대" type="checkbox" value=""
                                           aria-label="..." checked>
                                <% } else{ %>
                                    <input class="form-check-input me-1" name="연령대" type="checkbox" value=""
                                           aria-label="...">
                                <% } %>
                                <%= el.range %>
                            </li>
                        <% }) %>
                    </ul>
                </td>
                <td>
                    <ul class="list-group">
                        <% data.price.forEach((el)=>{ %>
                            <li class="list-group-item">
                                <% if(el.active == true){ %>
                                    <input class="form-check-input me-1" name="가격대" type="checkbox" value=""
                                           aria-label="..." checked>
                                <% } else{ %>
                                    <input class="form-check-input me-1" name="가격대" type="checkbox" value=""
                                           aria-label="...">
                                <% } %>
                                <%= el.range %>
                            </li>
                        <% }) %>
                    </ul>
                </td>
            </tr>

        </table>
        <div style="text-align: center;">
            <button id="register" class="btn btn-primary">저장</button>
        </div>
    </div>
</div>
</body>
<script>
    (function ($) {
        $(async function () {
            $('#register').click(save);
        })
    })(jQuery);

    async function save() {
        const option = []
        $('#select input').each(function (index, item) {
            option.push({
                type: $(this).attr("name"),
                value: $(this).parent().text().trim(),
                active: $(this).is(":checked")
            })
        });
        try {
            const ret = await axios.post('/admin/app', {
                option: option
            }, {
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            return ret;
        } catch (err) {
            console.log("상품 데이터 조회 오류:", err);
            return undefined;
        }
    }
</script>
</html>
